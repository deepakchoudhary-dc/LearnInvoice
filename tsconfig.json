{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "src",
    "resolveJsonModule": true,
    "noEmit": true
  },
  "include": ["src/**/*", "data/**/*"],
  "ts-node": {
    "esm": true
  }
}
